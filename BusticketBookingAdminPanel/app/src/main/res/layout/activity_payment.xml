<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaymentActivity">

    <EditText
        android:id="@+id/PaymentCardNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="84dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Card Number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PaymentCVC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="CVC"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/PaymentCardNumber"
        app:layout_constraintTop_toBottomOf="@+id/PaymentCardNumber" />

    <Button
        android:id="@+id/PayButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginBottom="64dp"
        android:text="buy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/PaymentSurname"
        app:layout_constraintStart_toStartOf="@+id/PaymentSurname"
        app:layout_constraintTop_toBottomOf="@+id/ActivityPayment" />

    <EditText
        android:id="@+id/PaymentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/PaymentCVC"
        app:layout_constraintTop_toBottomOf="@+id/PaymentCVC" />

    <EditText
        android:id="@+id/PaymentSurname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="Surname"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/PaymentName"
        app:layout_constraintTop_toBottomOf="@+id/PaymentName" />

    <TextView
        android:id="@+id/ActivityPayment"
        android:layout_width="206dp"
        android:layout_height="40dp"
        android:layout_marginTop="19dp"
        android:layout_marginBottom="346dp"
        android:gravity="center"
        android:textColor="#0033ff"
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/PayButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>