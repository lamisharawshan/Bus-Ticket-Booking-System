<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/Llayout1"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Source"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/Timearrival"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Llayout"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Departure_time"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/Destination"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Llayout2"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:text="Number of ticket booked:"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/TicketNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/Llayout3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView

                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:text="Date of trip:"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textColor="#000000"
                android:textStyle="bold" />

        </LinearLayout>



        <TextView
            android:id="@+id/route_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold"
            android:visibility="gone" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textStyle="bold" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/colo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="60"
            android:orientation="horizontal">

            <TextView

                android:layout_width="84dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="textEnd"
                android:text="â‚¬"
                android:textColor="#C81E11"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView

                android:id="@+id/rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:textAlignment="textStart"
                android:textColor="#C81E11"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>



    </LinearLayout>
</LinearLayout>